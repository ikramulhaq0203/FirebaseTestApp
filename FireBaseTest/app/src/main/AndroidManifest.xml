<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="firebasetest.ikram.com.firebasetest">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomeActivity"
            android:theme="@style/CustomTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".RegistrationUser"
            android:theme="@style/CustomTheme"/>

        <activity android:label="Inventry Management"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:name=".UserDetails"/>

        <activity android:label="Add Stock"
            android:name=".AddItems"/>

        <activity android:label="Sell to customer"
            android:name=".SellActivity"/>

        <activity android:label="In Transaction Details"
            android:name=".InTransaction"/>

        <activity android:label="Out Transaction Details"
            android:name=".OutTransaction"/>

        <activity android:label="Current Stocks"
            android:name=".CurrentStocks"/>

        <activity android:label="Dues Details"
            android:name=".DuesDetails"/>

        <activity android:label="ScannerActivity"
            android:name=".ScannerActivity"/>

        <activity android:label="Modify Stock"
            android:name=".InTransactionUpdate"/>

        <activity android:label="Customer Copy"
            android:name=".CustomerCopy"/>

        <activity android:label="Update Sold Stock"
            android:name=".OutTransactionUpdate"/>

        <activity android:label="Dues Show Activity"
            android:name=".DuesShowActivity"/>

    </application>

</manifest>